<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#80AAAAAA"/>
            <stroke android:width="2dp" android:color="#80888888"/>
            <size android:width="70dp" android:height="30dp"/>
            <corners android:bottomLeftRadius="10dp" android:topRightRadius="10dp"/>
        </shape>
    </item>
    <!--Enabled state   -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/star_button_color"/>
            <stroke android:width="2dp" android:color="@color/star_button_border_color"/>
            <size android:width="70dp" android:height="30dp"/>
            <corners android:bottomLeftRadius="10dp" android:topRightRadius="10dp"/>
        </shape>
    </item>
</selector>